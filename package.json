{
  "name": "loop-gateway",
  "version": "1.0.0",
  "description": "Agentic Loop Gateway - Easy Docker setup for AI agent loops with messaging channel UI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.ts' 'ui/**/*.html'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "test": "DB_PATH=/tmp/hitl-test.db ANTHROPIC_API_KEY=test tsx --test tests/**/*.test.ts",
    "validate": "npm run typecheck && npm run lint && npm run format:check"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "baileys": "^6.7.16",
    "better-sqlite3": "^11.7.0",
    "express": "^4.21.0",
    "express-ws": "^5.0.2",
    "imap": "^0.8.19",
    "mailparser": "^3.7.2",
    "node-cron": "^4.2.1",
    "node-ical": "^0.25.4",
    "node-telegram-bot-api": "^0.66.0",
    "nodemailer": "^6.9.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/express-ws": "^3.0.5",
    "@types/imap": "^0.8.40",
    "@types/mailparser": "^3.4.5",
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^10.0.0",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.56.1"
  }
}
